          </ul>
       </div>
    </div>
</template>

<script>
export default {
  data(){
    return{
      isActive:false
    }
  },
  methods:{
    isHide(){
      
      var sideFull = document.querySelector('.sidebar-full');
      
         
      var sideBar = document.getElementById('sidebar');
      // console.log(sideBar);
      sideBar.classList.add('sidebar-closed');
      
    }
  }
}
</script>

