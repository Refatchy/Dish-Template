      //   }else{
      //     console.log(data_item,data_parent);
      //     console.log('not-ok');
      //   }
        
      // }
      
      
      
    },
    isHide(){
      
      var sideFull = document.querySelector('.sidebar-full');
      
         
      var sideBar = document.getElementById('sidebar');
      // console.log(sideBar);
      sideBar.classList.add('sidebar-closed');
      
    }
  }
}
</script>

